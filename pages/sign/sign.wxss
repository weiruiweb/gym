}
.sign_note .text1{
	color:#00c6f7;
}
.sign_note .text2{
	margin-left:20rpx;
}

.item1{
	width:116rpx;
	height:116rpx;
	border-radius:50%;
	border:solid 1px #dcdcdc;
	text-align:center;
	line-height:116rpx;
	color:#666;
	background:#f2f2f2;
	margin:0px auto;
}
.this_item{
	border:solid 1px #00c6f7;
	background:#e5f9fe;
}
.choose_day{
	position:absolute;
	right:15rpx;
	top:70%;
}
.choose_day image{
	width:29rpx;
	height:29rpx;

}
.adver{
	width:100%;
	height:118rpx;
