	height:210rpx;
	width:210rpx;
	padding:16rpx;
	border-radius:50%;
	background:rgba(119,119,119,0.5);
	margin:40rpx auto 30rpx auto;
	line-height:210rpx;
	text-align:center;

}
.sign_btn{
	width:100%;
	height:100%;
	background:#fff;
	color:#333;
