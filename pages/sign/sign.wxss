	margin-top:40rpx;
}
.insist{
	width:50%;
	text-align:center;
	color:#b2b2b2;
}
.insist_day{
	height:60%;
	font-size:40rpx;

}
.insist_days{
	height:40%;
	font-size:26rpx;
}
.sign{
	position:relative;
	text-align:center;
	height:555rpx;
	overflow:hidden;
}
.sign_bg image{
	width:100%;
	height:555rpx;
}
.sign_date{
	width:100%;
	position:absolute;
	top:0;
	left:0rpx;
}
.date_year{
	padding:0rpx 40rpx;
	height:110rpx;
	line-height:110rpx;
	width:330rpx;
	margin:0rpx auto;
	color:#fff;

}
.date_year image{
	width:11rpx;
	height:19rpx;
}
.year{
	padding:0rpx 40rpx;
	background:#333;
	
}
.year_in{
	border-bottom:solid 1px #fff;
}
.sign_month{
	padding:0rpx 16rpx;
	background:#333;
}
.month_in{
	width:100%;
}
.weak{
	display:flex;
}
.weak_day{
	width:14.28%;
	height:62rpx;
	line-height:62rpx;
	color:#fff;
	text-align:center;
	align-items:center;

}

.sign_day{
	display:flex;
	flex-wrap:wrap;
	align-items:center;
	font-weight:normal;
}
.this_day{
	width:14.28%;
	height:62rpx;
	text-align:center;
}
.this_day view{
	width:62rpx;
	height:62rpx;
	line-height:62rpx;
	background:#bb212e;
	border-radius:50%;
	color:#666;
	margin:0 auto;
}
.today_sign{
	padding:0rpx 43rpx;
	border-bottom:solid 1px #e0e0e0;
	background:#f5f5f5;
}
.begin_sign{
	height:138rpx;
	display:flex;
	justify-content:between;
	align-items:center;
	width:100%;
}
.sign_left{
	width:68.5%;
	height:80rpx;
	text-align:right;
}
.sign_right{
	width:31.5%;
	height:80rpx;
	color:#666;
	line-height:80rpx;
	text-align:right;
}
.sign_now{
	width:242rpx;
	height:80rpx;
	border-radius:30rpx;
	background:#00c6f7;
	line-height:80rpx;
