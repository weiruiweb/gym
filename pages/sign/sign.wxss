page{
	min-height:100%;
	width:100%;
	background:#333;
}
.sign_banner{
	width:100%;
	height:502rpx;
	position:relative;
}
.sign_banner image{
	width:100%;
	height:100%;
}
.sign_cont{
	position:absolute;
