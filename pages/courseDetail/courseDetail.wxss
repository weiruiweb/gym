/**index.wxss**/

@import "../../wxParse/wxParse.wxss";
view {
    color: #ccc;
}

page {
    width: 100%;
    min-height: 100%;
    background: #333;
}

.banner {
    width: 100%;
    height: 400rpx;
    overflow: hidden;
}

.banner image {
    width: 100%;
    height: 400rpx;
}

#index_cont {
    position: relative;
    top: -40rpx;
}

.index_in {
    width: 100%;
    height: 214rpx;
    background: #262626;
    border-radius: 10rpx;
}

.gym_intro {
    height: 100%;
    width: 92%;
    display: flex;
    align-items: center;
    padding: 0 4%;
}

.intro_cont {
    height: 100%;
    width: 100%;
}

.gym_name {
    height: 90rpx;
}

.intro_detail {
    height: 94rpx;
    overflow: hidden;
    color: #b2b2b2;
    font-size: 24rpx;
}

.user_tlt {
    height: 98rpx;
    width: 100%;
    align-items: center;
    display: flex;
}

.tlt_cont {
    height: 36rpx;
    padding-left: 16rpx;
    border-left: solid 2px #bb212e;
    font-size: 30rpx;
    color: #b2b2b2;
    line-height: 36rpx;
    margin-right: 30rpx;
}

.mark image {
    width: 27rpx;
    height: 27rpx;
}

.mark {
    color: #bb212e;
    font-size: 24rpx;
    margin-right: 20rpx;
    display: flex;
    align-items: center;
}

.user_img {
    position: absolute;
    right: 5%;
    top: -30%;
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    overflow: hidden;
    margin: 0px auto;
}

.detail_list {
    height: 152rpx;
    border-bottom: solid 1px #999;
}

.time {
    font-size: 24rpx;
    color: #ccc;
}

.time view {
    margin: 0 2.6%;
}

.address {
    width: 22.5%;
    height: 50rpx;
    background: #bb212e;
    color: #fff;
    text-align: center;
    line-height: 50rpx;
    border-radius: 30rpx;
}
.time text{
	font-size:32rpx;
	color:#bb212e;
}
