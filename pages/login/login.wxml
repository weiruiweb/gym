<!--login.wxml-->
<view class="login">
  <view style="text-align:center;width:100%;">
  <view class="user_img">
      <open-data type="userAvatarUrl"></open-data>
  </view>
  <view style="font-size:26rpx;color:#e5e5e5;display: block;line-height: 90rpx;">教练名</view>
</view>
</view>
<view id="login">
  <view class="login_input flexRowBetween">
    <view class="input_img">
      <image src="/images/login_phone.png"></image>
    </view>
     <view class="input_in">
      <input placeholder="请输入手机号"></input>
    </view>
  </view>
  <view class="login_input flexRowBetween">
    <view class="input_img">
      <image src="/images/login_pass.png"></image>
    </view>
     <view class="input_in">
      <input placeholder="请输入验证码"></input>
    </view>
  </view>
</view>
<button class="submit_info" style="width:93%;margin-top:160rpx;"  bindtap="intoPath"  data-path="/pages/coachCenter/coachCenter">
  登录
</button>
